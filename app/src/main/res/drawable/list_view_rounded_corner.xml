<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 实心(填充) -->
    <solid
        android:color="@color/black_color"/>
    <!-- 描边 -->
    <stroke
        android:width="1dp"
        android:color="@color/black_color" />
    <!-- 渐变 -->
    <gradient
        android:startColor="#D5CFCF"
        android:endColor="#D5CFCF"/>
<!--    内部边距-->
    <padding
        android:left="7dp"
        android:right="7dp"
        android:top="7dp"
        android:bottom="7dp" />
    <!-- 圆角 -->
    <corners
        android:radius="10dp" />
</shape>